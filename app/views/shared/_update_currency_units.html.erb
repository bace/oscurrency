<% unless @groups.nil? %>
<script type="text/javascript">
  function update_currency_units(i) {
    var group_units = {
      <%- @groups.each do |g| -%>
        <%= "'#{g.id}': '#{h g.unit.pluralize}'," %> 
      <%- end -%>
    };
    elem = document.getElementById('units');
    if(!i)
      elem.innerHTML = "hours";
    else
      elem.innerHTML = group_units[i];
}
</script>
<%- end -%>
